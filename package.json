{
  "name": "figma-defold-handoff",
  "version": "0.2.44",
  "description": "Figma to Defold handoff tool",
  "scripts": {
    "lint": "eslint --ext .ts,.tsx,.svelte --ignore-pattern node_modules .",
    "lint:fix": "eslint --ext .ts,.tsx,.svelte --ignore-pattern node_modules --fix .",
    "build": "node esbuild.mjs",
    "watch": "npm run build -- --watch",
    "start": "npm run watch"
  },
  "author": "",
  "license": "",
  "dependencies": {
    "jszip": "^3.10.1",
    "math-expression-evaluator": "^2.0.5"
  },
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "*",
    "@figma/plugin-typings": "*",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "esbuild": "0.20.1",
    "esbuild-svelte": "^0.8.0",
    "eslint": "^8.54.0",
    "eslint-plugin-svelte": "^2.35.1",
    "svelte": "^4.2.12",
    "svelte-eslint-parser": "^0.33.1",
    "svelte-preprocess": "^5.1.3",
    "typescript": "^5.3.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@figma/figma-plugins/recommended",
      "plugin:svelte/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "parser": "svelte-eslint-parser"
      }
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "root": true,
    "settings": {
      "alias": {
        "map": [
          [
            "components",
            "./src/components"
          ],
          [
            "state",
            "./src/state"
          ],
          [
            "config",
            "./src/config"
          ],
          [
            "defold",
            "./src/defold"
          ],
          [
            "utilities",
            "./src/utilities"
          ],
          [
            "style",
            "./src/styles"
          ]
        ],
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx",
          ".svelte",
          ".json"
        ]
      }
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  }
}
