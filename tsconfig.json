{
  "compilerOptions": {
    "strict": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES6",
    "lib": [
      "ES2017"
    ],
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "baseUrl": "./src",
    "paths": {
      "config": [
        "config/*"
      ],
      "components": [
        "components/*"
      ],
      "handoff": [
        "handoff/*"
      ],
      "state": [
        "state/*"
      ],
      "utilities": [
        "utilities/*"
      ],
      "styles": [
        "styles/*"
      ]
    },
  }
}